@model MamalianASP.Models.DatabaseStatModel
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<p>Here, you can select a stat from a dropdown which should be deleted.</p>
<p>Once you've selected an entry simply click on the button.</p>

@using (Html.BeginForm("DeleteFunction", "Database", FormMethod.Post)) {
    <h2>Character Select</h2>
    @Html.DropDownListFor(m => m.SelectedId, Model.GetStats())

    <p style="margin-top: 12px">
        <input class="btn btn-danger" id="btnSubmit" type="submit" value="Delete" />
    </p>
}